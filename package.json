{
  "name": "@appril/crud",
  "version": "0.2.22",
  "description": "Appril CRUD Api and Generators",
  "author": "Slee Woo",
  "license": "MIT",
  "engines": {
    "node": "20.10",
    "npm": "10.2"
  },
  "files": [
    "pkg/*"
  ],
  "// ✨ seems exports.types not fully supported by all editors yet?": "",
  "typesVersions": {
    "*": {
      "api": [
        "./pkg/api/index.d.ts"
      ],
      "client": [
        "./pkg/client/index.d.ts"
      ],
      "vite-plugin": [
        "./pkg/vite-plugin/vite-plugin/index.d.ts"
      ]
    }
  },
  "exports": {
    "./api": {
      "require": "./pkg/api/index.js",
      "types": "./pkg/api/index.d.ts"
    },
    "./client": {
      "default": "./pkg/client/index.js",
      "types": "./pkg/client/index.d.ts"
    },
    "./vite-plugin": {
      "require": "./pkg/vite-plugin/index.js",
      "types": "./pkg/vite-plugin/lib/vite-plugin/index.d.ts"
    }
  },
  "scripts": {
    "// ✨ lint": "",
    "lint": "biome lint ./lib",
    "// ✨ build": "",
    "esbundler": "func() { e=$1; shift; esbuild $e --bundle --platform=node --target=node20 --packages=external --loader:.tpl=text $*; }; func",
    "// ✨ build api": "",
    "build:api": "npm run esbundler -- lib/api/index.ts --sourcemap=inline --outdir=pkg/api",
    "postbuild:api": "tsc -p lib/api/tsconfig.json",
    "// ✨ build client": "",
    "build:client-templates": "cd lib/client; vite -c vite.config-templates.ts build",
    "build:client": "mkdir -p pkg/client; :> pkg/client/index.js",
    "postbuild:client": "cp -fv lib/client/@types.ts pkg/client/index.d.ts",
    "// ✨ build vite-plugin": "",
    "prebuild:vite-plugin": "for f in lib/api/templates/*; do cp -fv $f lib/vite-plugin/templates/api/_$(basename ${f%.*}).tpl; done; for f in lib/client/templates/*; do cp -fv $f lib/vite-plugin/templates/client/_$(basename $f).tpl; done",
    "build:vite-plugin": "npm run esbundler -- lib/vite-plugin/index.ts --sourcemap=inline --outdir=pkg/vite-plugin",
    "postbuild:vite-plugin": "tsc -p lib/vite-plugin/tsconfig.json; rsync -a lib/vite-plugin/templates pkg/vite-plugin",
    "// ✨ build package": "",
    "prebuild": "mkdir -p pkg; find pkg -type f -exec rm -fv {} \\;",
    "build": "set -e; npm run lint; for e in api client vite-plugin; do npm run build:$e; done"
  },
  "prettier": "@appril/prettier-config",
  "release-it": {
    "hooks": {
      "before:init": [
        "npm run build"
      ]
    }
  },
  "dependencies": {
    "@appril/core": "^0.2.10",
    "@appril/more": "^0.2.6",
    "@appril/pgts": "^0.2.7",
    "@phenomnomnominal/tsquery": "^6.1.3",
    "fs-extra": "^11.2.0",
    "kleur": "^4.1.5",
    "mustache": "^4.2.0",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@appril/tsconfig": "^0.2.3",
    "@biomejs/biome": "^1.5.3",
    "@types/fs-extra": "^11.0.4",
    "@types/koa": "^2.14.0",
    "@types/koa__router": "^12.0.4",
    "@types/mustache": "^4.2.5",
    "@types/node": "^20.11.19",
    "esbuild": "^0.20.0",
    "knex": "^3.1.0",
    "koa": "^2.15.0",
    "release-it": "^17.1.0",
    "typescript": "^5.3.3",
    "vite": "^5.1.3",
    "vue": "^3.4.19",
    "vue-router": "^4.2.5",
    "vue-tsc": "^1.8.27",
    "zod": "^3.22.4",
    "zod-validation-error": "^3.0.2"
  },
  "peerDependencies": {
    "@appril/dbx": "^0.2.8",
    "@appril/ui": "^0.2.5",
    "knex": "^3.1.0",
    "pinia": "^2.1.7",
    "vue": "^3.4.19",
    "vue-router": "^4.2.5",
    "zod": "^3.22.4",
    "zod-validation-error": "^3.0.2"
  }
}
