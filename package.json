{
  "name": "@appril/crud",
  "version": "0.2.4",
  "description": "Appril CRUD Api and Generators",
  "author": "Slee Woo",
  "license": "MIT",
  "engines": {
    "node": "20.9",
    "npm": "10"
  },
  "files": [
    "pkg/*"
  ],
  "// ✨ seems exports.types not fully supported by all editors yet?": "",
  "typesVersions": {
    "*": {
      "api": [
        "./pkg/api/index.d.ts"
      ],
      "client": [
        "./pkg/client/index.d.ts"
      ],
      "vite-plugin": [
        "./pkg/vite-plugin/index.d.ts"
      ]
    }
  },
  "exports": {
    "./api": {
      "require": "./pkg/api/index.js",
      "types": "./pkg/api/index.d.ts"
    },
    "./client": {
      "import": "./pkg/client/index.js",
      "types": "./pkg/client/index.d.ts"
    },
    "./client/style.css": {
      "default": "./pkg/client/style.css"
    },
    "./vite-plugin": {
      "require": "./pkg/vite-plugin/index.js",
      "types": "./pkg/vite-plugin/index.d.ts"
    }
  },
  "scripts": {
    "// ✨ build api": "",
    "build:api": "esbundler lib/api/index.ts --sourcemap=inline --outdir=pkg/api",
    "postbuild:api": "tsc -p lib/api/tsconfig.json",
    "// ✨ build client": "",
    "build:client": "cd lib/client; vite build",
    "// ✨ build vite-plugin": "",
    "build:vite-plugin": "esbundler lib/vite-plugin/index.ts --sourcemap=inline --outdir=pkg/vite-plugin",
    "postbuild:vite-plugin": "tsc -p lib/vite-plugin/tsconfig.json; rsync -a lib/vite-plugin/templates/ pkg/vite-plugin/templates",
    "// ✨ build": "",
    "prebuild": "mkdir -p pkg; find pkg -type f -exec rm -fv {} \\;",
    "build": "for e in api client vite-plugin; do npm run build:$e; done",
    "// ✨ publish": "",
    "prepub": "npm run build",
    "pub": "npm pub"
  },
  "dependencies": {
    "@appril/core": "^0.2.3",
    "@appril/pgts": "^0.2.3",
    "fs-extra": "^11.1.1",
    "kleur": "^4.1.5",
    "mustache": "^4.2.0",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@appril/dev": "^0.2.2",
    "@appril/scripts": "^0.2.2",
    "@types/fs-extra": "^11.0.4",
    "@types/mustache": "^4.2.5",
    "@types/node": "^20.9.0",
    "esbuild": "^0.19.5",
    "pinia": "^2.1.7",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "zod": "^3.22.4"
  },
  "peerDependencies": {
    "@appril/ui": "^0.2.2",
    "zod": "^3.22.4",
    "zod-validation-error": "^2.1.0"
  }
}
