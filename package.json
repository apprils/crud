{
  "name": "@appril/crud",
  "version": "0.2.23",
  "description": "Appril CRUD Api and Generators",
  "author": "Slee Woo",
  "license": "MIT",
  "engines": {
    "node": ">=20.10",
    "npm": ">=10.2"
  },
  "files": [
    "pkg/*"
  ],
  "exports": {
    "./api": {
      "require": "./pkg/api.js",
      "types": "./pkg/api/index.d.ts"
    },
    "./client": {
      "default": "./pkg/client/index.js",
      "types": "./pkg/client/index.d.ts"
    },
    "./vite-plugin": {
      "require": "./pkg/vite-plugin.js",
      "types": "./pkg/vite-plugin/index.d.ts"
    }
  },
  "scripts": {
    "// ✨ linters": "",
    "lint": "biome lint ./lib",
    "// ✨ types": "",
    "tsc": "tsc --emitDeclarationOnly",
    "// ✨ builders": "",
    "esbuilder": "set -e; func() { e=$1; shift; esbuild lib/$e/index.ts --outfile=pkg/$e.js --bundle --platform=node --target=node20 --packages=external --loader:.tpl=text --sourcemap=inline $*; }; func",
    "// ✨ build api": "",
    "build:api": "npm run esbuilder api",
    "// ✨ build client": "",
    "build:client-templates": "cd lib/client; vite -c vite.config-templates.ts build",
    "build:client": "mkdir -p pkg/client; :> pkg/client/index.js",
    "postbuild:client": "cp -fv lib/client/@types.ts pkg/client/index.d.ts",
    "// ✨ build vite-plugin": "",
    "build:vite-plugin:api-templates": "for f in lib/api/templates/*; do cp -fv $f lib/vite-plugin/templates/api/_$(basename ${f%.*}).tpl; done",
    "build:vite-plugin:client-templates": "for f in lib/client/templates/*; do cp -fv $f lib/vite-plugin/templates/client/_$(basename $f).tpl; done",
    "prebuild:vite-plugin": "npm run build:vite-plugin:api-templates; npm run build:vite-plugin:client-templates",
    "build:vite-plugin": "npm run esbuilder vite-plugin",
    "postbuild:vite-plugin": "rsync -a lib/vite-plugin/templates pkg/vite-plugin",
    "// ✨ build": "",
    "prebuild": "mkdir -p pkg; find pkg -type f -exec rm -fv {} \\;",
    "build": "set -e; npm run lint; npm run tsc; for e in api client vite-plugin; do npm run build:$e; done"
  },
  "prettier": "@appril/prettier-config",
  "release-it": {
    "hooks": {
      "before:init": [
        "npm run build"
      ]
    }
  },
  "dependencies": {
    "@appril/core": "^0.2.11",
    "@appril/more": "^0.2.7",
    "@appril/pgts": "^0.2.8",
    "@phenomnomnominal/tsquery": "^6.1.3",
    "fs-extra": "^11.2.0",
    "mustache": "^4.2.0",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@appril/tsconfig": "^0.2.3",
    "@biomejs/biome": "^1.5.3",
    "@types/fs-extra": "^11.0.4",
    "@types/koa": "^2.14.0",
    "@types/koa__router": "^12.0.4",
    "@types/mustache": "^4.2.5",
    "@types/node": "^20.11.19",
    "esbuild": "^0.20.1",
    "knex": "^3.1.0",
    "koa": "^2.15.0",
    "release-it": "^17.1.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "vue": "^3.4.19",
    "vue-router": "^4.3.0",
    "vue-tsc": "^1.8.27",
    "zod": "^3.22.4",
    "zod-validation-error": "^3.0.2"
  },
  "peerDependencies": {
    "@appril/dbx": "^0.2.9",
    "@appril/ui": "^0.2.5",
    "knex": "^3.1.0",
    "pinia": "^2.1.7",
    "vue": "^3.4.19",
    "vue-router": "^4.3.0",
    "zod": "^3.22.4",
    "zod-validation-error": "^3.0.2"
  }
}
